{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rammassages list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rammassage in rammassages %}
            <tr>
                <td><a href="{{ path('rammassage_show', { 'id': rammassage.id }) }}">{{ rammassage.id }}</a></td>
                <td>{% if rammassage.date %}{{ rammassage.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ rammassage.adresse }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('rammassage_show', { 'id': rammassage.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('rammassage_edit', { 'id': rammassage.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rammassage_new') }}">Create a new rammassage</a>
        </li>
    </ul>
{% endblock %}
