{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rammassage</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rammassage.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if rammassage.date %}{{ rammassage.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ rammassage.adresse }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rammassage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('rammassage_edit', { 'id': rammassage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
