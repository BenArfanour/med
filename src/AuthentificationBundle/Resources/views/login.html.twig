<body background="{{ asset('images/avion.jpg') }}" style="overflow: hidden">

{% trans_default_domain 'FOSUserBundle' %}
{% if error %}
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel"><font color="red"><strong>Vérifier vos données</strong></font></h4>
            </div>
            <div class="modal-body">
                 <b>{{ error.messageKey|trans(error.messageData, 'security') }} </b>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>
{% endif %}

<div class="container">
    <div class="row">
        <h1 align="center">  <br> <br><font color="white"><strong>Aviation IT</strong><i>Service Africa</i> </font> <br> <br> <br> </h1>
        <div class="col-md-4 col-md-offset-4">

            <div class="panel panel-default" style="margin-bottom: 100%">
                <div class="panel-heading">
                    <h3 class="panel-title">Connectez Vous</h3>
                </div>
                <div class="panel-body">

                    <form accept-charset="UTF-8" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Nom d'utilisateur" name="_username" id="username" type="text" value="{{ last_username }}" required="required">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Mot de Passe" type="password" id="password" name="_password" required="required">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" > {{ 'security.login.remember_me'|trans }}
                                </label>
                            </div>
                            <input class="btn btn-lg btn-success btn-block"  type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  value="Connexion">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
</html>