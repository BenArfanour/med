
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="erreur"> {{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <header> Connectez-Vous :
      </header>

    <label for="username">{{ 'security.login.username'|trans }}  :<span>*</span> </label>

    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" style=""/>


    <label for="password">{{ 'security.login.password'|trans }} : <span>*</span> </label>

    <input type="password" id="password" name="_password" required="required" />

    <label for="remember_me">{{ 'security.login.remember_me'|trans }}  :</label>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on"
           style=" display:inline-block;
  width:12px;
  height:12px;
  background:#444;
  border-radius:12px;
"/>

    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  />
    <div class="divbot">

    </div>

</form>
